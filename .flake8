[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    Lib,
    Scripts,
    hostinger_deployment,
    .venv,
    venv,
    build,
    dist
ignore = 
    # W503: line break before binary operator (conflicts with W504)
    W503,
    # E501: line too long (handled by max-line-length)
    E501
